<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="jij.marimoss.member.mapper.MemberMapper">
  	
  	<!-- 로그인 -->
  	<select id="login">
  		SELECT 
  			*
  		FROM "MEMBER"
  		WHERE 
  			MEMBER_DEL_FL = 'N'
		AND 
			MEMBER_EMAIL = #{memberEmail}
  	</select>
  	
  	
  	<!-- 이메일 중복 검사 -->
  	<select id="emailCheck">
  	  	SELECT 
  			COUNT(*)
  		FROM "MEMBER"
  		WHERE 
			MEMBER_EMAIL = #{memberEmail}
	</select>
	
	
	<!-- 회원 가입 -->
  	<insert id="signUp">
		INSERT INTO "MEMBER" 
		VALUES (
			SEQ_MEMBER_NO.NEXTVAL,
			#{memberEmail},
			#{memberPassward}, 
			#{memberNickname}, 
			DEFAULT,
			NULL,
			NULL,
			DEFAULT,
			DEFAULT,
			DEFAULT,
			DEFAULT
		)
  	</insert>
  	
  	
  	<!-- 팔로우 체크 -->
  	<select id="followCheck">
  		SELECT COUNT(*)
		FROM "FOLLOW"
		WHERE 
			FOLLOWER_NO = #{memberNo}
		AND	
			FOLLOWEE_NO = #{loginMemberNo}
  	</select>
  	
  	
  	<insert id="follow">
	  	INSERT INTO "FOLLOW"
		VALUES (
			#{memberNo},
			#{loginMemberNo},
			DEFAULT
		)
  	</insert>
  	
  	
  	<delete id="unfollow">
  	  	DELETE "FOLLOW"
  		WHERE FOLLOWER_NO = #{memberNo}
		AND FOLLOWEE_NO = #{loginMemberNo}
  	</delete>
  	
  	
  	<!-- 비밀번호 변경 -->
  	<update id="pwChange">
  	  	UPDATE "MEMBER"
  		SET
  			MEMBER_PASSWARD = #{encPw}
  		WHERE
  			MEMBER_EMAIL = #{memberEmail}
  	</update>
  	
  	
  	<update id="memberDel">
  	  	UPDATE "MEMBER"
  		SET
  			MEMBER_DEL_FL = 'Y'
  		WHERE
  			MEMBER_EMAIL = #{memberEmail}
  	</update>
  	
</mapper>
